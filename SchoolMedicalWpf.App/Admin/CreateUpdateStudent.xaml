<Window x:Class="SchoolMedicalWpf.App.Admin.CreateUpdateStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create/Update Student" Height="598" Width="600"
        Background="{StaticResource PrimaryBlueBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SchoolMedicalWpf.App;component/Themes/SchoolMedicalTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="159*"/>
            <RowDefinition Height="365*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <!-- Header -->
        <Border Background="{StaticResource PrimaryBlueBrush }" Height="90" VerticalAlignment="Top" Grid.ColumnSpan="4">
            <TextBlock x:Name="DetailModelTextBlock" Text="Quản lý học sinh"
                       Style="{StaticResource TitleText}"
                       Foreground="{StaticResource AccentYellowBrush}"
                       VerticalAlignment="Center"
                       Margin="32,0,0,0"/>
        </Border>

        <!-- Main Card -->
        <Border Background="{StaticResource BackgroundWhiteBrush}"
                CornerRadius="18"
                Padding="36"
                Margin="32,70,88,10"
                Effect="{StaticResource CardShadow}" Grid.RowSpan="2">
            <Grid Margin="0,0,0,-46">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Mã học sinh" Style="{StaticResource LabelText}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="StudentCodeTextBox" Style="{StaticResource InputBox}" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Họ tên học sinh" Style="{StaticResource LabelText}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="FullNameTextBox" Style="{StaticResource InputBox}" Grid.Row="1" Grid.Column="1"/>

                <TextBlock Text="Ngày sinh" Style="{StaticResource LabelText}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <DatePicker x:Name="DayOfBirthPicker" Style="{StaticResource DatePickerStyle}" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Text="Giới tính" Style="{StaticResource LabelText}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="GenderTextBox" Style="{StaticResource InputBox}" Grid.Row="3" Grid.Column="1"/>

                <TextBlock Text="Khối lớp" Style="{StaticResource LabelText}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="GradeTextBox" Style="{StaticResource InputBox}" Grid.Row="4" Grid.Column="1"/>

                <TextBlock Text="Địa chỉ" Style="{StaticResource LabelText}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="AddressTextBox" Style="{StaticResource InputBox}" Grid.Row="5" Grid.Column="1"/>

                <TextBlock Text="SĐT Phụ huynh" Style="{StaticResource LabelText}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="ParentPhoneTextBox" Style="{StaticResource InputBox}" Grid.Row="6" Grid.Column="1"/>

                <TextBlock Text="Email phụ huynh" Style="{StaticResource LabelText}" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="ParentEmailTextBox" Style="{StaticResource InputBox}" Grid.Row="7" Grid.Column="1"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="425,90,0,0"
                    Width="120" Grid.ColumnSpan="4" Grid.RowSpan="2">
            <Button x:Name="SaveButton"
                    Content="Lưu"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="SaveButton_Click"/>
            <Button x:Name="CloseButton"
                    Content="Đóng"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,16,0,0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>