<UserControl x:Class="SchoolMedicalWpf.App.Admin.AdminHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SchoolMedicalWpf.App;component/Themes/SchoolMedicalTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom gradient brushes for medical theme -->
            <LinearGradientBrush x:Key="MedicalGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardHoverGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F8FBFF" Offset="1"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <!-- Background with subtle medical pattern -->
            <Border Background="{StaticResource MedicalGradient}" Opacity="0.9"/>

            <StackPanel Margin="20">
                <!-- Hero Section with Medical Branding -->
                <Border Background="White" 
                        CornerRadius="20" 
                        Padding="40,30" 
                        Margin="0,0,0,30"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Chào mừng Admin" 
                                       FontSize="28" 
                                       FontWeight="Light" 
                                       Foreground="{StaticResource PrimaryBlueBrush}" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Hệ thống chăm sóc sức khỏe học đường" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextGrayBrush}" 
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Quản lý toàn diện sức khỏe học sinh với công nghệ hiện đại" 
                                       FontSize="16" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       TextWrapping="Wrap"
                                       MaxWidth="450"
                                       LineHeight="24"/>
                        </StackPanel>

                        <!-- Medical Icon with pulse animation -->
                        <Border Grid.Column="1" 
                                Background="{StaticResource SecondaryGreenBrush}" 
                                CornerRadius="60" 
                                Width="120" 
                                Height="120"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource SecondaryGreen}" 
                                                  BlurRadius="20" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.4"/>
                            </Border.Effect>
                            <Viewbox Width="60" Height="60">
                                <Canvas Width="24" Height="24">
                                    <!-- Medical cross icon -->
                                    <Path Fill="White" 
                                          Data="M19,3H5C3.9,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M17,13H13V17H11V13H7V11H11V7H13V11H17V13Z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- Quick Stats Section -->
                <TextBlock Text="Thống kê nhanh" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextGrayBrush}" 
                           Margin="5,0,0,20"/>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Students -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="20,15" 
                            Margin="0,0,10,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="{StaticResource PrimaryBlueBrush}" 
                                    CornerRadius="20" 
                                    Width="40" 
                                    Height="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,10">
                                <TextBlock Text="👥" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="1,245" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBlueBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Học sinh" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Vaccinations This Month -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="20,15" 
                            Margin="5,0,5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="{StaticResource SecondaryGreenBrush}" 
                                    CornerRadius="20" 
                                    Width="40" 
                                    Height="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,10">
                                <TextBlock Text="💉" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="156" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource SecondaryGreenBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tiêm chủng/tháng" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Health Checkups -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="20,15" 
                            Margin="5,0,5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="{StaticResource AccentYellowBrush}" 
                                    CornerRadius="20" 
                                    Width="40" 
                                    Height="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,10">
                                <TextBlock Text="🩺" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="89" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource AccentYellowBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Khám sức khỏe" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Users -->
                    <Border Grid.Column="3" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="20,15" 
                            Margin="10,0,0,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="{StaticResource SuccessGreenBrush}" 
                                    CornerRadius="20" 
                                    Width="40" 
                                    Height="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,10">
                                <TextBlock Text="✅" 
                                           FontSize="20" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="98%" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource SuccessGreenBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tỷ lệ hoạt động" 
                                       FontSize="12" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Functions Section -->
                <TextBlock Text="Chức năng chính" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextGrayBrush}" 
                           Margin="5,0,0,20"/>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Vaccination Management -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="18" 
                            Padding="30,25" 
                            Margin="0,0,15,15"
                            Effect="{StaticResource CardShadow}"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5"
                            MouseLeftButtonUp="VaccinationManagementBorder_MouseLeftButtonUp"
                            >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CardHoverGradient}"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <Border Background="{StaticResource SecondaryGreenBrush}" 
                                    CornerRadius="15" 
                                    Width="60" 
                                    Height="60" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="💉" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Quản lý tiêm chủng" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextGrayBrush}" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Lập lịch và theo dõi tiêm chủng cho học sinh" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       TextWrapping="Wrap" 
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>

                    <!-- User Management -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="18" 
                            Padding="30,25" 
                            Margin="15,0,0,15"
                            Effect="{StaticResource CardShadow}"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5"
                            MouseLeftButtonUp="UserManagementBorder_MouseLeftButtonUp">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CardHoverGradient}"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <Border Background="{StaticResource AccentYellowBrush}" 
                                    CornerRadius="15" 
                                    Width="60" 
                                    Height="60" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="👥" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Quản lý người dùng" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextGrayBrush}" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Quản lý tài khoản và phân quyền người dùng" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       TextWrapping="Wrap" 
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>

                    <!-- Student Management -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Background="White" 
                            CornerRadius="18" 
                            Padding="30,25" 
                            Margin="0,0,15,0"
                            Effect="{StaticResource CardShadow}"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5"
                            MouseLeftButtonUp="StudentManagementBorder_MouseLeftButtonUp">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CardHoverGradient}"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <Border Background="{StaticResource PrimaryBlueBrush}" 
                                    CornerRadius="15" 
                                    Width="60" 
                                    Height="60" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="🎓" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Quản lý học sinh" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextGrayBrush}" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Quản lý thông tin và hồ sơ sức khỏe học sinh" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       TextWrapping="Wrap" 
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>

                    <!-- Profile Management -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="White" 
                            CornerRadius="18" 
                            Padding="30,25" 
                            Margin="15,0,0,0"
                            Effect="{StaticResource CardShadow}"
                            Cursor="Hand"
                            RenderTransformOrigin="0.5,0.5"
                            MouseLeftButtonUp="ProfileBorder_MouseLeftButtonUp">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CardHoverGradient}"/>
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1.05" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                           To="1" Duration="0:0:0.2"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                           To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <Border Background="{StaticResource DarkGrayBrush}" 
                                    CornerRadius="15" 
                                    Width="60" 
                                    Height="60" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,0,0,15">
                                <TextBlock Text="👤" 
                                           FontSize="30" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Hồ sơ cá nhân" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextGrayBrush}" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Xem và cập nhật thông tin cá nhân" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       TextWrapping="Wrap" 
                                       LineHeight="20"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Tips Section with Medical Focus -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="25,20" 
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Background="{StaticResource SuccessGreenBrush}" 
                                    CornerRadius="25" 
                                    Width="50" 
                                    Height="50" 
                                    Margin="0,0,15,0">
                                <TextBlock Text="🏥" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Hướng dẫn sử dụng hệ thống" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextGrayBrush}"/>
                                <TextBlock Text="Những lưu ý quan trọng cho quản trị viên" 
                                           FontSize="14" 
                                           Foreground="{StaticResource DarkGrayBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Border Height="1" Background="{StaticResource BorderGrayBrush}" Margin="0,0,0,15"/>

                        <StackPanel>
                            <TextBlock Text="• Kiểm tra thường xuyên lịch tiêm chủng và nhắc nhở phụ huynh" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       Margin="15,5,0,5"/>
                            <TextBlock Text="• Đảm bảo thông tin sức khỏe học sinh được cập nhật chính xác" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       Margin="15,0,0,5"/>
                            <TextBlock Text="• Theo dõi báo cáo để đưa ra quyết định y tế kịp thời" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       Margin="15,0,0,5"/>
                            <TextBlock Text="• Bảo mật thông tin y tế theo quy định pháp luật" 
                                       FontSize="14" 
                                       Foreground="{StaticResource DarkGrayBrush}" 
                                       Margin="15,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
