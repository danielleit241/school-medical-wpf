<UserControl x:Class="SchoolMedicalWpf.App.Parent.StudentInfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="360" 
             MaxWidth="800" 
             MinHeight="100"
             Margin="0,0,0,16">

    <UserControl.Resources>
        <!-- Button Style -->
        <Style x:Key="DeclarationButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="16,8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="12"
            Padding="20"
            Background="#FAFAFA"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F5F9FE"/>
                        <Setter Property="BorderBrush" Value="#2196F3"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Student Avatar -->
            <Border Grid.Column="0"
                    Width="60"
                    Height="60"
                    CornerRadius="30"
                    Background="#E3F2FD"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0">
                <TextBlock Text="👨‍🎓" 
                           FontSize="24" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Student Information -->
            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        Margin="0,4,16,4">

                <!-- Student Name -->
                <TextBlock Text="{Binding FullName}" 
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#1976D2"
                           Margin="0,0,0,4"/>

                <!-- Student Details Grid -->
                <Grid Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Student Code -->
                    <StackPanel Grid.Column="0" Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="0,0,20,4">
                        <TextBlock Text="🆔" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Mã số:" FontWeight="Medium" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding StudentCode}" Foreground="#333333"/>
                    </StackPanel>

                    <!-- Grade -->
                    <StackPanel Grid.Column="1" Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="0,0,0,4">
                        <TextBlock Text="🏫" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Lớp:" FontWeight="Medium" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Grade}" Foreground="#333333"/>
                    </StackPanel>

                    <!-- Health Status -->
                    <StackPanel Grid.Column="0" Grid.Row="1" 
                                Orientation="Horizontal" 
                                Grid.ColumnSpan="2">
                        <TextBlock Text="❤️" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Trạng thái:" FontWeight="Medium" Margin="0,0,6,0"/>
                        <Border Background="#E8F5E8" 
                                CornerRadius="10" 
                                Padding="6,2">
                            <TextBlock Text="Sẵn sàng khai báo" 
                                       FontSize="12" 
                                       FontWeight="Medium"
                                       Foreground="#2E7D32"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Declaration Button -->
            <Button Grid.Column="2"
                    x:Name="DeclarationButton" 
                    Content="📝 Khai báo"
                    Width="120"
                    Height="40"
                    VerticalAlignment="Center"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    BorderThickness="0"
                    Style="{StaticResource DeclarationButtonStyle}"
                    Click="DeclarationButton_Click"/>
        </Grid>
    </Border>
</UserControl>