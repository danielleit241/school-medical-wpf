<UserControl x:Class="SchoolMedicalWpf.App.Parent.StudentInfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="360" MaxWidth="600" MinHeight="100">
    <Border CornerRadius="16"
            Margin="0,0,0,24"
            Padding="16"
            Background="White"
            BorderBrush="#BDBDBD"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#333333" Opacity="0.15" BlurRadius="8" ShadowDepth="4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="Thông tin học sinh"
                       FontWeight="Bold"
                       FontSize="16"
                       Foreground="#2196F3"
                       Margin="0,0,0,6"
                       Grid.Row="0" Grid.Column="0"/>

            <!-- Nút khai báo -->
            <Button x:Name="DeclarationButton" Content="Khai báo"
                    Width="90"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource PrimaryButton}" Click="DeclarationButton_Click"/>

            <!-- Thông tin học sinh -->
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,8,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock Text="Mã số: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding StudentCode}" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock Text="Tên: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding FullName}" Margin="4,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                    <TextBlock Text="Lớp: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding Grade}" Margin="4,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>