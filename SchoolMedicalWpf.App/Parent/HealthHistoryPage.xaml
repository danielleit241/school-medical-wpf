<UserControl x:Class="SchoolMedicalWpf.App.Parent.HealthHistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="500" Loaded="UserControl_Loaded">
    <Grid>
        <TextBlock Text="Danh sách học sinh" FontWeight="Bold" FontSize="16" Margin="10"/>
        <ItemsControl ItemsSource="{Binding Students}" Margin="0,40,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="8">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Content="Lịch sử khám sức khỏe"
                                        Click="HealthHistory_Click"
                                        DataContext="{Binding}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Lịch sử tiêm chủng"
                                        Click="VaccinationHistory_Click"
                                        DataContext="{Binding}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
