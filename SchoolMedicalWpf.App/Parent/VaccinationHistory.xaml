<UserControl x:Class="SchoolMedicalWpf.App.Parent.VaccinationHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolMedicalWpf.App.Parent"
             Background="Transparent" Loaded="UserControl_Loaded">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="StudentNameText"
                   Text="Tên học sinh"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   Grid.Row="0"
                   Margin="0,0,0,16"/>

        <!-- Search box với placeholder -->
        <Grid Grid.Row="1" Margin="0,0,0,16" Height="32" Width="260">
            <TextBox x:Name="SearchBox"
                     VerticalContentAlignment="Center"
                     Padding="8,0,32,0"
                     />
            <Button Content="Tìm"
                    Width="40"
                    Height="28"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,2,0"
                    Click="SearchButton_Click"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="VaccinationHistoryDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0"
                  ItemsSource="{Binding FilteredResults}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày tiêm" Binding="{Binding VaccinationDate}" Width="120"/>
                <DataGridTextColumn Header="Mũi số" Binding="{Binding DoseNumber}" Width="60"/>
                <DataGridTextColumn Header="Vị trí tiêm" Binding="{Binding InjectionSite}" Width="100"/>
                <DataGridTextColumn Header="Phản ứng ngay" Binding="{Binding ImmediateReaction}" Width="120"/>
                <DataGridTextColumn Header="Thời gian phản ứng" Binding="{Binding ReactionStartTime}" Width="120"/>
                <DataGridTextColumn Header="Loại phản ứng" Binding="{Binding ReactionType}" Width="120"/>
                <DataGridTextColumn Header="Mức độ" Binding="{Binding SeverityLevel}" Width="80"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>