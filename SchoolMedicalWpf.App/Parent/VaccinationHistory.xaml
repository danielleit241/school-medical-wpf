<UserControl x:Class="SchoolMedicalWpf.App.Parent.VaccinationHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundWhiteBrush}">
    <Grid>
        <!-- Header -->
        <TextBlock x:Name="StudentVaccinationHistory" Text="Vaccination History"
                   Style="{StaticResource TitleText}"
                   Margin="32,24,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <!-- Responsive Search Bar -->
        <Border Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="32,80,32,0"
                Height="56"
                VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="130" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Vaccine Name"
                           Style="{StaticResource SubtitleText}"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           Grid.Column="0"/>
                <TextBox x:Name="SearchVaccineNameTextBox"
                         Style="{StaticResource InputBox}"
                         Height="40"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         Grid.Column="1"/>
                <TextBlock Text="Manufacturer"
                           Style="{StaticResource SubtitleText}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           Grid.Column="3"/>
                <TextBox x:Name="SearchManufacturerTextBox"
                         Style="{StaticResource InputBox}"
                         Height="40"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         Grid.Column="4"/>
                <Button x:Name="SearchButton"
                        Content="Search"
                        Style="{StaticResource PrimaryButton}"
                        Height="40"
                        Width="104"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Grid.Column="6"
                        Click="SearchButton_Click"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="VaccinationHistoryDataGrid"
                  ItemsSource="{Binding AllVaccinations}"
                  AutoGenerateColumns="False"
                  Margin="32,150,32,90"
                  Background="{StaticResource BackgroundWhiteBrush}"
                  Foreground="{StaticResource TextGrayBrush}"
                  BorderBrush="{StaticResource BorderGrayBrush}"
                  RowHeaderWidth="0"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  AlternatingRowBackground="{StaticResource AccentYellowBrush}"
                  FontSize="15"
                  ColumnWidth="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Width="100" Binding="{Binding DateAdministered}" />
                <DataGridTextColumn Header="Vaccine Name" Width="140" Binding="{Binding VaccineName}" />
                <DataGridTextColumn Header="Dose" Width="70" Binding="{Binding DoseNumber}" />
                <DataGridTextColumn Header="Manufacturer" Width="120" Binding="{Binding Manufacturer}" />
                <DataGridTextColumn Header="Lot Number" Width="120" Binding="{Binding LotNumber}" />
                <DataGridTextColumn Header="Location" Width="120" Binding="{Binding Location}" />
                <DataGridTextColumn Header="Notes" Width="*" Binding="{Binding Notes}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons Panel -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,32,32">
            <Button x:Name="DetailsButton"
                    Content="Details"
                    Style="{StaticResource PrimaryButton}"
                    Width="120"
                    Margin="10,0"
                    Click="DetailsButton_Click"/>
            <Button x:Name="QuitButton"
                    Content="Quit"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="120"
                    Margin="10,0"
                    Click="QuitButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>