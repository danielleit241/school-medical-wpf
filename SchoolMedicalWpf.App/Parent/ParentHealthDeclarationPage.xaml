<UserControl x:Class="SchoolMedicalWpf.App.Parent.ParentHealthDeclarationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SchoolMedicalWpf.App.Parent"
             MinHeight="400" 
             MinWidth="800"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Animation for loading -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="12" 
                Margin="24" 
                Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title và Description -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="🏥 Khai báo sức khỏe học sinh" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Khai báo tình trạng sức khỏe hàng ngày cho con em trước khi đến trường" 
                               FontSize="14" 
                               Foreground="#666666"/>
                </StackPanel>

                <!-- Summary Info -->
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <Border Background="#E3F2FD" 
                            CornerRadius="8" 
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👨‍🎓" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Số học sinh: " FontWeight="Medium"/>
                            <TextBlock x:Name="StudentCountText" 
                                       Text="{Binding StudentList.Count}" 
                                       FontWeight="Bold" 
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="12" 
                Margin="24,0,24,24" 
                Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>

            <Grid>
                <!-- Loading Indicator -->
                <StackPanel x:Name="LoadingPanel" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="🔄" 
                               FontSize="32" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="Đang tải danh sách học sinh..." 
                               FontSize="16" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Student List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="0,12,0,0">
                    <ItemsControl ItemsSource="{Binding StudentList}">
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StudentList.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:StudentInfoCard DataContext="{Binding}">
                                    <controls:StudentInfoCard.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
                                        </EventTrigger>
                                    </controls:StudentInfoCard.Triggers>
                                </controls:StudentInfoCard>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StudentList.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="👨‍🎓" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Opacity="0.3"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Chưa có học sinh nào" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#BDBDBD"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Vui lòng liên hệ với trường để đăng ký thông tin học sinh" 
                               FontSize="14" 
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="300"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>