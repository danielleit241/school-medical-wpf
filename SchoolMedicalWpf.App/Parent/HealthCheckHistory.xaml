<UserControl x:Class="SchoolMedicalWpf.App.Parent.HealthCheckHistory"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" Loaded="UserControl_Loaded">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="StudentNameText"
                   Text="Tên học sinh"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   Grid.Row="0"
                   Margin="0,0,0,16"/>

        <!-- Search box -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,16">
            <TextBox x:Name="SearchBox"
             Width="250"
             Height="28"
             VerticalAlignment="Center"
             Margin="0,0,8,0"
             />
            <Button Content="Tìm kiếm"
                    Height="28"
                    VerticalAlignment="Center"
                    Click="SearchButton_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="HealthCheckHistoryDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0"
                  ItemsSource="{Binding FilteredResults}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày khám" Binding="{Binding DatePerformed}" Width="120"/>
                <DataGridTextColumn Header="Chiều cao" Binding="{Binding Height}" Width="80"/>
                <DataGridTextColumn Header="Cân nặng" Binding="{Binding Weight}" Width="80"/>
                <DataGridTextColumn Header="Mắt trái" Binding="{Binding VisionLeft}" Width="80"/>
                <DataGridTextColumn Header="Mắt phải" Binding="{Binding VisionRight}" Width="80"/>
                <DataGridTextColumn Header="Thính lực" Binding="{Binding Hearing}" Width="100"/>
                <DataGridTextColumn Header="Mũi" Binding="{Binding Nose}" Width="80"/>
                <DataGridTextColumn Header="Huyết áp" Binding="{Binding BloodPressure}" Width="100"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>