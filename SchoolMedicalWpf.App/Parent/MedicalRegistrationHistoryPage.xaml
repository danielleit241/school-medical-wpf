<UserControl x:Class="SchoolMedicalWpf.App.Parent.MedicalRegistrationHistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="700" Loaded="UserControl_Loaded">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề và nút -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,16">
            <TextBlock Text="Lịch sử đơn thuốc" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#2196F3"
                       Margin="0,0,16,0"/>
            <Button Content="Tạo đơn thuốc"
                    Width="140"
                    Height="36"
                    Margin="0"
                    Click="CreateMedicalRegistration_Click"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Khu vực chứa danh sách hoặc thông báo -->
        <Grid Grid.Row="1">
            <!-- Danh sách có scroll -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding MedicalRegistrationList}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MedicalRegistrationList.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10"
                                    Margin="0,0,0,16"
                                    Padding="16"
                                    Background="White"
                                    BorderBrush="#BDBDBD"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding MedicationName}" 
                                               FontWeight="Bold" 
                                               FontSize="15"
                                               Foreground="#1976D2"/>
                                    <TextBlock Text="{Binding DateSubmitted, StringFormat='Ngày gửi: {0:dd/MM/yyyy}'}" 
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Student.FullName, StringFormat='Học sinh: {0}'}" 
                                               Margin="0,0,0,0"/>
                                    <TextBlock Text="{Binding TotalDosages, StringFormat='Tổng liều dùng: {0}'}" 
                                               Margin="0,0,0,0"/>
                                    <TextBlock Text="{Binding ParentalConsent, StringFormat='Phụ huynh đồng ý: {0}'}"
                                               Margin="0,0,0,0"/>
                                    <TextBlock Text="{Binding Status, StringFormat='Trạng thái: {0}'}"
                                               Margin="0,0,0,0"/>
                                    <TextBlock Text="{Binding Notes, StringFormat='Ghi chú: {0}'}"
                                               Foreground="#616161" 
                                               FontStyle="Italic"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding DateApproved, StringFormat='Ngày duyệt: {0:dd/MM/yyyy}'}"
                                               Margin="0,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Thông báo khi không có lịch sử, căn giữa tuyệt đối -->
            <TextBlock Text="Chưa có lịch sử đơn thuốc."
                       FontStyle="Italic" 
                       Foreground="#B0BEC5"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding MedicalRegistrationList.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>